{
  "name": "conservar-sostenible",
  "version": "1.0.0",
  "description": "Sitio web de turismo sostenible",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node src/database/setup.js",
    "seed": "node src/database/seeder.js",
    "reset": "npm run setup && npm run seed",
    "clean": "rd /s /q node_modules && del package-lock.json",
    "fresh": "npm run clean && npm install && npm run reset",
    "windows-setup": "node src/database/windows-setup.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "express-fileupload": "^1.4.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "swiper": "^10.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
